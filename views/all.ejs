<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <title><%=pageTitle%></title>
            <main>
                <% if (Object.keys(datas).length > 0) { %>
                    <div class="grid">
                        <% for (let data of datas) { %>
                            <div>
                                <article class="title-item">
                                    <header class="card__header">
                                        <h1>
                                            <%=data["Attribute"]%>:
                                        </h1>
                                        <h1 class="product__title">
                                            Title: <%= data["title"] %>
                                        </h2>
                                    </header>
                                    <div class="title-isbn">
                                        <h3 class="product__price">
                                            ISBN: <%= data["isbn"] %>
                                        </h3>
                                        <p class="data_desc">
                                        Author: <%= data["authors"] %>
                                        </p>
                                        <p class="data_desc">
                                        Description: <%= data["description"] %>
                                        </p>
                                        <p class="data_desc">
                                            Published At: <%= data["publishedAt"] %>
                                        </p>
                                    <div>
                                </article>
                            </div>
                        <% } %>
                    </div>
                <% } else { %>
                    <h1>No Data Found!</h1>
                <% } %>
                <div>
                   <h1 class="Print"> Print out all books and magazines with all their details sorted by title:</h1>
                    <form action="/sort" method="POST">
                        <button type="submit" value="all">Sort</button>
                    </form>
                </div>
            </main>
            <%- include('./includes/end.ejs') %>
